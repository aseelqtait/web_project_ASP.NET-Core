    @model Login

@{
    ViewBag.Titel = " LogIn ";
}
@{
    Layout = null;
}


<style>
    body {
        font-size: larger;
    }

    div, button {
        margin: 0px auto;
    }

    .table {
        display: table;
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        background-color: white;
        padding: 20px;
        border: solid;
        border-color: bisque;
        border-radius: 5%;
    }

    .row {
        display: table-row;
    }

        .row > * {
            display: table-cell;
            margin: 10px;
        }

    img {
        width: 100%;
        height: 100%;
    }
</style>
<div>
    <img src="@Url.Content("~/lib/1.jpg")" width="50" />
</div>
<form class="table" asp-action="login" asp-validation-summary="all" method="post">
    <div class="row"><h1>Log In</h1></div>
    <hr />
    <div class="row">
        <label asp-for="Email"> enter your email </label>

        <input asp-for="Email" type="email" />
    </div>

    <div class="row">
        <label asp-for="Password"> enter your password &nbsp; </label>

        <input asp-for="Password" type="password" />
        
    </div>
    <div class="row">
        <button type="submit">Log In</button>
    </div>

</form>