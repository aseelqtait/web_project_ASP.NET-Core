<div class="box2">
            <h3>@Model.BookName</h3>
            <br />
            <img src="@Url.Content("~/lib/"+Model.BookId+".jpg")" alt="">
            <br />
            <br />
            <span>@Model.Price $</span>
            

<br />

<br />
  

 <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary blue">Home</a>
</div>

